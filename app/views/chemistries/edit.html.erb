<%= form_for @chemistry, html: {class: "col-lg-3"} do |f| %>
  <%= error_notification(@chemistry.errors) %>

  <div class="mb-3 mb-3-sm">
    <%= f.label :measurement, class: "small" %>
    <%= f.select :measurement_item_id ,MeasurementItem.order(:display_name).pluck(:display_name,:id) , class: "form-control input-sm"  %>
  </div>

  <div class="mb-3 mb-3-sm">
    <%= f.label "value", class: "small" %>
    <%= f.text_field :value, class: "form-control input-sm" %>
  </div>

  <div class="mb-3 mb-3-sm">
    <%= f.label :unit, class: "small" %>
    <%= f.select :unit_id ,Unit.order(:html).pluck(:html, :id),include_blank: true, class: "form-control input-sm"  %>
  </div>

  <div class="mb-3 mb-3-sm">
    <%= f.label :uncertainty, class: "small" %>
    <%= f.text_field :uncertainty, class: "form-control input-sm" %>
  </div>

 <div class="mb-3 mb-3-sm">
    <%= f.label :description, class: "small" %>
    <%= f.text_area :description, class: "form-control input-sm", row: 3 %>
  </div>

  <div class="mb-3 mb-3-sm">
    <%= f.label :info, class: "small" %>
    <%= f.text_field :info, class: "form-control input-sm" %>
  </div>

  <div class="mb-3 mb-3-sm">
    <%= f.label :label, class: "small" %>
    <%= f.text_field :label, class: "form-control input-sm" %>
  </div>

  <%= f.submit "update chemistry", class: "btn btn-sm" %>
  <%= link_to "cancel", safe_referer_url, class: "btn btn-sm" %>
<% end %>
