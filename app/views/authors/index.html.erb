<div>
<%= link_to_unless_current MeasurementItem.model_name.human.downcase,measurement_items_path %>    | 
<%= link_to_unless_current MeasurementCategory.model_name.human.downcase,measurement_categories_path %>    | 
<%= link_to_unless_current Unit.model_name.human.downcase,units_path %>   | 
<%= link_to_unless_current Technique.model_name.human.downcase,techniques_path %>   | 
<%= link_to_unless_current Device.model_name.human.downcase,devices_path %>   | 
<%= link_to_unless_current Author.model_name.human.downcase,authors_path %>
</div>
<br><br>

<%= paginate @authors %>
<table class="table table-sm table-striped">
  <thead>
    <%= search_form_for @search do |f| %>
    <tr>
      <th>
        <%= f.button class: "btn btn-secondary" do %>
        <%= bi_icon('refresh') %>
        <% end %>
      </th>
      <th><%= sort_link @search, :name, "name" %></th>
      <th></th>
      <th><%= sort_link @search, :updated_at, "updated-at" %></th>
      <th><%= sort_link @search, :created_at, "created-at" %></th>
    </tr>
    <tr>
      <th></th>
      <th><%= f.text_field :name_cont, class: "form-control input-sm" %></th>
      <th></th>
      <th>
        <%= f.text_field :updated_at_gteq, placeholder: "from:", value: format_date(params[:q] && params[:q][:updated_at_gteq]), class: "form-control input-sm datepicker" %>
      </th>
      <th>
        <%= f.text_field :created_at_gteq, placeholder: "from:", value: format_date(params[:q] && params[:q][:created_at_gteq]), class: "form-control input-sm datepicker" %>
      </th>
    </tr>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th>
        <%= f.text_field :updated_at_lteq_end_of_day, placeholder: "to:", value: format_date(params[:q] && params[:q][:updated_at_lteq_end_of_day]), class: "form-control input-sm datepicker" %>
      </th>
      <th>
        <%= f.text_field :created_at_lteq_end_of_day, placeholder: "to:", value: format_date(params[:q] && params[:q][:created_at_lteq_end_of_day]), class: "form-control input-sm datepicker" %>
      </th>
    </tr>
    <% end %>
  </thead>
  <tbody>
    <% @authors.each do |author| %>
    <tr>
      <td>
        <%= link_to edit_author_path(author) do %>
        <%= bi_icon('edit') %>
        <% end %>
      </td>
      <td><%= author.name %></td>
      <td></td>
      <td><%= difference_from_now(author.updated_at) %></td>
      <td><%= difference_from_now(author.created_at) %></td>
      <td>
        <%= link_to author_path(author), method: :delete , data: {confirm: t("confirm.delete")} do %>
        <%= bi_icon('remove') %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <%= form_for Author.new, remote: true, format: :json, html: { class: "create" } do |f| %>
    <tr>
      <td></td>
      <td><%= f.text_field :name, class: "form-control input-sm" %></td>
      <td>
        <%= f.button class: "btn btn-secondary", id: "save-button" do %>
        <%= bi_icon('save') %>
        <% end %>
      </td>
      <td></td>
      <td></td>
    </tr>
    <% end %>
  </tfoot>
</table>
