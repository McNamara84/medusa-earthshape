<%= form_for @preparation_type, html: {class: "col-lg-3"} do |f| %>
  <%= error_notification(@preparation_type.errors) %>


  <div class="form-classification form-classification-sm">
    <%= f.label :parent, class: "small" %>
    <%= f.select :parent_id, PreparationType.order(:full_name).pluck(:full_name,:id), { include_blank: true }, class: "form-control input-sm" %>
  </div>
  <div class="form-classification form-classification-sm">
    <%= f.label :name, class: "small" %>
    <%= f.text_field :name, class: "form-control input-sm" %>
  </div>

  <div class="form-classification form-classification-sm">
    <%= f.label :description, class: "small" %>
    <%= f.text_area :description, class: "form-control input-sm" %>
  </div>

  <%= f.submit "update", class: "btn btn-sm" %>
  <%= link_to "cancel", preparation_types_path, class: "btn btn-sm" %>
<% end %>
