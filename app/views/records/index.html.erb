<%= paginate @records %>
<table>
  <thead>
    <tr>
      <th>name</th>
      <th>global_id</th>
      <th>owner</th>
      <th>group</th>
      <th>updated_at</th>
      <th>created_at</th>
    </tr>
  </thead>
  <tbody>
    <% @records.each do |record| %>
    <tr>
      <td><%#= link_to record.name, record.datum %></td><!-- 関連先の１つ Chemistry にはname属性がない -->
      <td><%= record.global_id %></td>
      <td><%= record.user.try!(:username) %></td>
      <td><%= record.group.try!(:name) %></td>
      <td><%= difference_from_now(record.updated_at) %></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>
