<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th></th>
      <th>name</th>
      <th>physical form</th>
      <th>quantity</th>
      <th>unit</th>
      <th></th>
      <th>global_id</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= form_tag bundle_edit_stones_path, id: "stone-bundle-form" do %>
      <% @place.stones.each do |stone| %>
        <tr>
          <td>
            <%= check_box_tag("ids[]", stone.id, checked: false, id: "ids_#{stone.id}", class: "select-row") if can?(:update, stone) %>
          </td>
          <td><%= link_to stone.name,stone %></td>
          <td><%= stone.physical_form.try!(:name) %></td>
          <td><%= stone.try!(:quantity) %></td>
          <td><%= stone.try!(:quantity_unit) %></td>
          <td></td>
          <td><%= stone.try!(:global_id) %></td> 
          <td>
            <%= link_to place_stone_path(@place,stone), method: :delete ,title: "unlink stone",data: {confirm: t("confirm.unlink")} do %>
              <span class="glyphicon glyphicon-remove"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <%= form_for Stone.new, url: place_stones_path(@place) do |f|%>
        <th><%= check_box_tag nil, nil, false, class: "select-row-all" %></th>
        <th><%= f.text_field :name, class: "form-control input-sm" %></th>
        <th><%= f.select :physical_form_id, PhysicalForm.pluck(:name, :id), include_blank: true, class: "form-control input-sm" %></th>
        <th><%= f.text_field :quantity, class: "form-control input-sm" %></th>
        <th><%= f.text_field :quantity_unit, class: "form-control input-sm" %></th>
        <th>
          <%= f.button title:"add attachment file",class: "btn btn-default" do %>
            <span class="glyphicon glyphicon-save"></span>
          <% end %>
        </th>
      <% end %>
      <%= form_tag link_stone_by_global_id_place_path(@place),method: :post do %>
        <th><%= text_field_tag :global_id, nil,class: "form-control input-sm" %></th>
        <th>
          <%= button_tag title: "link stone by global id",class: "btn btn-default" do %>
            <span class="glyphicon glyphicon-save"></span>
          <% end %>
        </th>
      <% end %>
    </tr>
  </tfoot>
</table>
<%= link_to_function "edit", "$('#stone-bundle-form').submit();", class: "btn btn-default" %>

