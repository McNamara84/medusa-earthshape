<%= form_for place, remote: true, format: :json, html: { class: "create" } do |f| %>
<tr>
  <th></th>
  <th><%= f.text_field :name,class: "form-control input-sm" %></th>
  <th><%= f.text_field :latitude,class: "form-control input-sm" %></th>
  <th><%= f.text_field :longitude,class: "form-control input-sm" %></th>
  <th><%= f.text_field :elevation,class: "form-control input-sm" %></th>
  <th></th>
  <%= f.fields_for :record_property_attributes do |r| %>
  <th><%= @current_user.username %><%= r.hidden_field :user_id ,value: @current_user.id %></th>
  <th><%= r.select :group_id ,Group.pluck(:name, :id),include_blank: true,class: "form-control input-sm" %></th>
  <% end %>
  <th>
    <%= f.button class: "btn btn-default" do %>
    <span class="glyphicon glyphicon-save"></span>
    <% end %>
  </th>
  <th></th>
</tr>
<% end %>

