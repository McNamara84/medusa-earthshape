<% if @places.present? %>
  <div class="text-right">
    <%= link_to(image_tag("icon_pdf_1.png", size: "20x20"), download_bundle_card_places_path(ids: @places.pluck(:id)) ) %>
    and <%= link_to("A4", download_bundle_card_places_path(ids: @places.pluck(:id), a4: true)) %>
  </div>
<% end %>

<%= form_for Place.new, url: bundle_update_places_path do |f| %>
<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th></th>
      <th>name</th>
      <th>latitude</th>
      <th>longitude</th>
      <th>elevation</th>
      <th>stone</th>
      <th>owner</th>
      <th>group</th>
      <th>published</th>
      <th>updated_at</th>
      <th>created_at</th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: :place, collection: PlaceDecorator.decorate_collection(@places), locals: { checked: true } %>
  </tbody>
  <tfoot>
    <tr>
      <th><%= check_box_tag nil, nil, true, class: "select-row-all" %></th>
      <th></th>
      <th><%= f.text_field :latitude,class: "form-control input-sm" %></th>
      <th><%= f.text_field :longitude,class: "form-control input-sm" %></th>
      <th><%= f.text_field :elevation,class: "form-control input-sm" %></th>
      <th></th>
      <th><%= f.select :user_id ,User.pluck(:username, :id), include_blank: true %></th>
      <th><%= f.select :group_id ,Group.pluck(:name, :id), include_blank: true %></th>
      <th>
	<%= f.button class: "btn btn-default" do %>
	<span class="glyphicon glyphicon-save"></span>
	<% end %>
      </th>
    </tr>
  </tfoot>
</table>
<% end %>
