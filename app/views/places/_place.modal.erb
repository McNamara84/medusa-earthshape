<tr>
  <td>
    <%= button_tag class: "btn btn-secondary btn-sm determine", "data-id" => place.global_id do %>
    <%= bi_icon('link') %>
    <% end %>
  </td>
  <td><%= link_to place.name, place_path(place, format: :modal), "data-bs-toggle" => "modal", "data-bs-target" => "#show-modal" %></td>
  <td><%= place.latitude_to_text %></td>
  <td><%= place.longitude_to_text %></td>
  <td><%= place.elevation_to_text %></td>
  <td><%= place.stones_count %></td>
  <td><%= place.group.try!(:name) %></td>
  <td><%= difference_from_now(place.updated_at) %></td>
</tr>

