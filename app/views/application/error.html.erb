<div class="alert alert-danger">
<div><%= link_to :back,request.referer.sub(/tab=.*&/,"").sub(/\?tab=.*/,"") + (params[:tab].blank? ? "" : "?tab=#{params[:tab]}") %></div>
<ul>
<% [@stone,@box,@analysis,@place,@bib,@attachment_file,@chemistry,@spot].each do |record| %>
  <% if record %>
    <% record.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  <% end %>
<% end %>
</ul>
</div>
