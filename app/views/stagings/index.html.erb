<h1>Upload new entries from a CSV file</h1>

<br>

<% staging=Staging.all.take%>

<% if staging.present?%>

  <%= form_tag(clear_staging_path(staging), method: :get, multipart: true) do %>
    <%= submit_tag :clear %>
  <% end %>

<% end %>

    <% tab_info = [
        ["box",@boxes, Box.model_name.human],
        ["place",@places, Place.model_name.human],
        ["collection",@collections, Collection.model_name.human],
        ["stone",@stones, Stone.model_name.human]
	]  %>
     <!-- Nav tabs -->
    <ul class="nav nav-tabs">
      <% tab_info.each do |key,array,title| %>
       <li class="<%= active_if_current(key) %>" ><a href="#<%= key %>" data-toggle="tab"><%= (title.blank? ? key : title)  + data_count(array) %></a></li>
      <% end %>
    </ul>
    
    <!-- Tab panes -->
    <div class="tab-content">
      <% tab_info.each do |key,array| %>
        <div class="tab-pane<%= active_if_current(key) %>" id="<%= key %>"><%= render partial: key.underscore %></div>
      <% end %>
    </div>


	
	
	


 


<br><br>
    <%= form_tag(import_stagings_path, method: :post, multipart: true) do %>
    <%= file_field_tag :data %>
    <%= submit_tag :upload %>
     <% end %>
