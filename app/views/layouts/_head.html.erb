<!-- Override Bootstrap 5 table styles for searchheader turquoise background -->
<style>
  .searchheader,
  .searchheader tr,
  .searchheader tr th,
  .searchheader tr td,
  .table .searchheader,
  .table .searchheader tr,
  .table .searchheader tr th,
  .table .searchheader tr td,
  .table-striped .searchheader,
  .table-striped .searchheader tr,
  .table-striped .searchheader tr th,
  .table-striped .searchheader tr td {
    background-color: #d7fef8 !important;
    --bs-table-bg: #d7fef8 !important;
    --bs-table-striped-bg: #d7fef8 !important;
    --bs-table-accent-bg: #d7fef8 !important;
  }
  
  /* Fix toolbar button sizes in show pages (Bootstrap 5 buttons are larger than Bootstrap 3) */
  #show-tools .btn-group-sm .btn,
  .tool-selector .btn-group-sm .btn {
    padding: 0.25rem 0.4rem !important;
    font-size: 0.75rem !important;
    line-height: 1.2 !important;
  }
  
  /* Ensure icons inside small buttons are also appropriately sized */
  #show-tools .btn-group-sm .btn .bi,
  .tool-selector .btn-group-sm .btn .bi {
    font-size: 0.875rem !important;
    vertical-align: middle !important;
  }
</style>
