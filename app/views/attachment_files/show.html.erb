<div class="row">
  <div id="show-caption" class="col-lg-12">
    <% if  @current_user.advanced then %>
	<%= @attachment_file.name_with_id %>
  <% else %>
	<%= @attachment_file.name %> 
  <% end %>
  </div>
</div>
<div class="row">
  <div id="show-tools" class="col-lg-4">
    <div class="btn-toolbar mb-2" role="toolbar">
      <div class="btn-group me-2">
        <%= link_to picture_attachment_file_path(@attachment_file), class: "btn btn-outline-secondary btn-sm", remote: true do %>
          <%= bi_icon('picture', size: '14px') %>
        <% end %>
      </div>
      <% if can? :update, @attachment_file %>
      <div class="btn-group me-2">
        <%= link_to edit_attachment_file_path(@attachment_file), class: "btn btn-outline-secondary btn-sm", remote: true do %>
          <%= bi_icon('pencil', size: '14px') %>
        <% end %>
        <%= link_to property_attachment_file_path(@attachment_file), class: "btn btn-outline-secondary btn-sm", remote: true do %>
          <%= bi_icon('cog', size: '14px') %>
        <% end %>
      </div>
      <% end %>
      <div class="btn-group me-2">
        <%= link_to @attachment_file.path, class: "btn btn-outline-secondary btn-sm" do %>
          <%= bi_icon('picture', size: '14px') %>
        <% end %>
        <%= link_to download_attachment_file_path(@attachment_file), class: "btn btn-outline-secondary btn-sm" do %>
          <%= bi_icon('file', size: '14px') %>
        <% end %>
      </div>
    </div>
    <div class="tool-content">
    </div>
  </div>
  <div id="show-body" class="col-lg-8">
    <% if @current_user.advanced then %>  
            <% tab_info = [
                ["at-a-glance",nil],
                ["stone",@attachment_file.stones,"sample"],
                ["box",@attachment_file.boxes],
                ["place",@attachment_file.places],
                ["bib",@attachment_file.bibs],
                ["spot",@attachment_file.spots]] %>
    <% else %>
            <% tab_info = [
                ["at-a-glance",nil],
                ["stone",@attachment_file.stones,"sample"],
                ["place",@attachment_file.places,"location"]] %>
    <% end %>        
        
    <!-- Nav tabs -->
    <ul class="nav nav-tabs">
      <% tab_info.each do |key,array,title| %>
       <li class="nav-item"><a class="nav-link<%= ' active' if active_if_current(key).present? %>" href="#<%= key %>" data-bs-toggle="tab"><%= (title.blank? ? key : title) + data_count(array) %></a></li>
      <% end %>

    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
      <% tab_info.each do |key,array| %>
        <div class="tab-pane<%= ' active' if active_if_current(key).present? %>" id="<%= key %>"><%= render partial: key.underscore %></div>
      <% end %>
    </div>
  </div>
</div>
