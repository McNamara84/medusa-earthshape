<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th></th>
      <th>name</th>
      <th>global_id</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= form_tag bundle_edit_bibs_path, id: "bib-bundle-form" do %>
      <% @attachment_file.bibs.each do |bib| %>
        <tr>
          <td>
              <%= check_box_tag("ids[]", bib.id, checked: false, id: "ids_#{bib.id}", class: "select-row") if can?(:update, bib) %>
            </td>
          <td><%= link_to bib.name, bib %></td>
          <td><%= bib.try!(:global_id) %></td>
          <td>
            <%= link_to attachment_file_bib_path(@attachment_file,bib), method: :delete ,title: "unlink stone",data: {confirm: t("confirm.unlink")} do %>
              <span class="glyphicon glyphicon-remove"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th><%= check_box_tag nil, nil, false, class: "select-row-all" %></th>
      <th></th>
      <%= form_tag link_bib_by_global_id_attachment_file_path(@attachment_file),method: :post do %>
        <th><%= text_field_tag :global_id, nil,class: "form-control input-sm" %></th>
        <th>
          <%= button_tag title: "link bib by global id",class: "btn btn-default" do %>
            <span class="glyphicon glyphicon-save"></span>
          <% end %>
        </th>
      <% end %>
    <tr>
  </tfoot>
</table>
<%= link_to_function "edit", "$('#bib-bundle-form').submit();", class: "btn btn-default" %>

