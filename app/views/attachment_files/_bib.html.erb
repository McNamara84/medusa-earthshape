<table class="table table-sm table-striped">
  <thead>
    <tr>
      <th></th>
      <th colspan= "2">name</th>
 <% if @current_user.advanced then %>  
      <th>global-id</th>
 <% end %>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= form_tag bundle_edit_bibs_path, id: "bib-bundle-form" do %>
      <% @attachment_file.bibs.each do |bib| %>
        <tr>
          <td>
              <%= check_box_tag("ids[]", bib.id, false, {id: "ids_#{bib.id}", class: "select-row"}) if can?(:update, bib) %>
            </td>
          <td colspan="2"><%= link_to_if can?(:read, bib), bib.name, bib %></td>
<% if @current_user.advanced then %>
	<td><%= bib.try!(:global_id) %></td>
<% end %>	
          <td>
            <%= link_to attachment_file_bib_path(@attachment_file,bib) + tab_param(__FILE__), method: :delete ,title: "unlink bib",data: {confirm: t("confirm.unlink")} do %>
              <%= bi_icon('remove') %>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
        <th><%= check_box_tag nil, nil, false, class: "select-row-all" %></th><th>Select all</th>
    <tr>
  </tfoot>
</table>
<%= link_to "bundle edit", "#", onclick: "$('#bib-bundle-form').submit();; return false;", class: "btn btn-secondary btn-sm" %>

<% if false %>
     <%= form_for Bib.new, url: attachment_file_bibs_path(@attachment_file) do |f|%>
        <%= hidden_tabname_tag(__FILE__) %>
        <th><%= check_box_tag nil, nil, false, class: "select-row-all" %></th>
        <th><%#= f.text_field :name, class: "form-control input-sm" %></th>
        <th>
          <%# f.button title:"add bib",class: "btn btn-secondary btn-sm" do %>
            <%#<%= bi_icon('save') %> %>
          <%# end %>
        </th>
      <% end %>
<% end %>

<hr>
<div>Link Bibliography</div>
<%= form_tag link_by_global_id_attachment_file_bibs_path(@attachment_file),method: :post do %>
        <%= hidden_tabname_tag(__FILE__) %>
        <div style="float:left; margin:5px">
	  <div class="input-group">
            <%= select_tag :global_id, options_for_select(Bib.choose_global_id(@current_user)), { include_blank: true  , id: "bib-global-id", class: "form-control input-sm"} %> 	  	  
	    <span class="input-group-text">
	      <%= link_to bibs_path(per_page: 10, format: :modal), "data-bs-toggle" => "modal", "data-bs-target" => "#search-modal", "data-input" => "#bib-global-id" do %>
	      <%= bi_icon('search') %>
	      <% end %>
	    </span>
	  </div>
        </div>
        <div style="float:left; margin:5px">
          <%= button_tag title: "link bib by global id",class: "btn btn-secondary btn-sm" do %>
            <%= bi_icon('save') %>
          <% end %>
        </div>
      <% end %>