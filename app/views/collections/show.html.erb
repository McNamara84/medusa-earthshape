<script src="http://maps.google.com/maps/api/js?v=3.23"></script>
<script src="http://cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src="http://cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js" type="text/javascript"></script><!-- only if you need custom infoboxes -->

<div class="row">
  <div id="show-caption" class="col-lg-12">
    <%= @collection.name%>
  </div>
</div>
<div class="row">
  <div id="show-tools" class="col-lg-4">
    <div class="row btn-toolbar tool-selector" role="toolbar">
      <div class="btn-group btn-group-sm">
	<%= link_to map_collection_path(@collection), class: "btn btn-default activate", remote: true do %>
	  <span class="glyphicon glyphicon-globe"></span>
	<% end %>
      </div>    
      <% if can? :update, @place %>
      <div class="btn-group btn-group-sm">
	<%= link_to edit_collection_path(@collection), class: "btn btn-default", remote: true do %>
	  <span class="glyphicon glyphicon-pencil"></span>
	<% end %>
	<%= link_to property_collection_path(@collection), class: "btn btn-default", remote: true do %>
	  <span class="glyphicon glyphicon-cog"></span>
	<% end %>
      </div>
     <% end %>
    </div>
    <img>
    <div class="row tool-content">
    </div>
  </div>
  <div id="show-body" class="col-lg-8">
    <% 

    tab_info = [
        ["at-a-glance",nil],
   #     ["place",@collection.places],
        ["file",@collection.attachment_files]
 ] 
	
	%>
    <!-- Nav tabs -->
    <ul class="nav nav-tabs">
      <% tab_info.each do |key,array,title| %>
       <li class="<%= active_if_current(key) %>" ><a href="#<%= key %>" data-toggle="tab"><%= (title.blank? ? key : title) + data_count(array) %></a></li>
      <% end %>

    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
      <% tab_info.each do |key,array| %>
        <div class="tab-pane<%= active_if_current(key) %>" id="<%= key %>"><%= render partial: key.underscore %></div>
      <% end %>
    </div>
  </div>
</div>
