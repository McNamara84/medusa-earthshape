<%= paginate @collections, remote: true %>
<%= search_form_for @search, url: polymorphic_path(@search.klass, format: :modal), remote: true do |f| %>
<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>
        <%= f.button class: "btn btn-default" do %>
        <span class="glyphicon glyphicon-refresh"></span>
        <% end %>
      </th>      
      <th><div><%= sort_link @search, :name, Collection.human_attribute_name(:name), { format: :modal }, remote: true %></div></th>
	<th>	<div><%= sort_link @search, :project, "Project", { format: :modal }, remote: true %></div></th>
      <th><div><%= sort_link @search, :Timeseries, "Timeseries", { format: :modal }, remote: true %></div></th>
      <th/><th/><th/>
    </tr>
    <tr>
      <th><%= text_field_tag :per_page, (params[:per_page] || Stone.default_per_page), size: 4, readonly: true %></th>
      <th><div><%= f.text_field :name_cont, size: 15 %></div></th><th><div><%= f.text_field :project_cont, size: 15 %></div></th>
      <th><div align="center"><%= f.check_box :timeseries_true, size: 12 %></div></th>
<!--        <th><%= f.text_field :weather_conditions_cont, size: 15 %></th>      
       <th><%= f.text_field :comment_cont, size: 15 %></th>      	
      <th>
        <%= f.text_field :updated_at_gteq, class: 'datepicker', placeholder: "from:", value: format_date(params[:q] && params[:q][:updated_at_gteq]), size: 10 %>
      </th>-->
    </tr>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
 <!--      <th></th>
      <th></th>
      <th>
        <%= f.text_field :updated_at_lteq_end_of_day, class: 'datepicker', placeholder: "to:", value: format_date(params[:q] && params[:q][:updated_at_lteq_end_of_day]), size: 10 %>
      </th>
      -->
    </tr>
  </thead>
  <tbody>
    <%= render partial: "collection.modal", collection: @collections, locals: { checked: false } %>
  </tbody>
</table>
<% end %>

