<div>
<%= link_to_unless_current Filetopic.model_name.human.downcase,filetopics_path %> 
</div>
<br><br>

<%= paginate @filetopics %>
<table class="table table-sm table-striped">
  <thead>
    <tr>
      <th></th>
      <th><%= Filetopic.model_name.human %></th>   
    </tr>
  </thead>
  <tbody>
    <% @filetopics.each do |filetopic| %>
    <tr>
      <td>
        <%= link_to edit_filetopic_path(filetopic) do %>
        <%= bi_icon('edit') %>
        <% end %>
      </td>
      <td><%= filetopic.name  %></td>
      <td></td>
      <td>
        <%= link_to filetopic_path(filetopic), method: :delete, data: {confirm: t("confirm.delete")} do %>
        <%= bi_icon('remove') %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <%= form_for Filetopic.new, remote: true, format: :json, html: { class: "create" } do |f| %>
    <tr>
      <td></td>
      <td><%= f.text_field :name, class: "form-control input-sm" %></td>      
      <td>
        <%= f.button class: "btn btn-secondary btn-sm" do %>
        <%= bi_icon('save') %>
        <% end %>
      </td>
      <td></td>
      <td></td>
    </tr>
    <% end %>
  </tfoot>
</table>