<tr>
  <td>
    <%= button_tag class: "btn btn-secondary btn-sm determine", "data-id" => stone.global_id do %>
    <%= bi_icon('link') %>
    <% end %>
  </td>
  <td><%= link_to stone.name, stone_path(stone, format: :modal), "data-toggle" => "modal", "data-target" => "#show-modal" %></td>
  <td><%= stone.parent.try!(:name) %></td>
  <td><%= stone.physical_form.try!(:name) %></td>
  <td><%= stone.classification.try!(:name) %></td>
  <td><%= stone.group.try!(:name) %></td>
  <td><%= difference_from_now(stone.updated_at) %></td>
</tr>
