<div class="row">
  <div id="show-caption" class="col-lg-12">
    <%= @stone.name_with_id %>
  </div>
</div>
<div class="row">
  <div id="show-tools" class="col-lg-4">
    <div class="row btn-toolbar tool-selector" role="toolbar">
      <div class="btn-group btn-group-sm">
	<%= link_to family_stone_path(@stone), class: "btn btn-default activate", remote: true do %>
	  <span class="glyphicon glyphicon-tree-conifer"></span>
	<% end %>
	<%= link_to picture_stone_path(@stone), class: "btn btn-default", remote: true do %>
	  <span class="glyphicon glyphicon-picture"></span>
	<% end %>
	<%= link_to map_stone_path(@stone), class: "btn btn-default", remote: true do %>
	  <span class="glyphicon glyphicon-globe"></span>
	<% end %>
      </div>
      <div class="btn-group btn-group-sm">
	<%= link_to edit_stone_path(@stone), class: "btn btn-default", remote: true do %>
	  <span class="glyphicon glyphicon-pencil"></span>
	<% end %>
	<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-cog"></span></button>
      </div>
      <div class="btn-group btn-group-sm">
	<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-tag"></span></button>
	<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-file"></span></button>
      </div>
    </div>
    <img>
    <div class="row tool-content">
    </div>
  </div>
  <div id="show-body" class="col-lg-8">
    <%= @stone.path %>
    <!-- Nav tabs -->
    <ul class="nav nav-tabs">
      <li><a href="#at-a-glance" data-toggle="tab">At a glance</a></li>
      <li><a href="#daughter" data-toggle="tab">Daughter</a></li>
      <li><a href="#analysis" data-toggle="tab">Analysis</a></li>
      <li><a href="#bib" data-toggle="tab">Bib</a></li>
      <li><a href="#file" data-toggle="tab">File</a></li>
    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
      <div class="tab-pane active" id="at-a-glance"><%= render partial: "at_a_glance" %></div>
      <div class="tab-pane" id="daughter">...</div>
      <div class="tab-pane" id="analysis">...</div>
      <div class="tab-pane" id="bib">...</div>
      <div class="tab-pane" id="file">...</div>
    </div>
  </div>
</div>
