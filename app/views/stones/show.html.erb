
<div class="row">
  <div id="show-caption" class="col-lg-12">
  <% if  @current_user.advanced then %>
	<%= @stone.name_with_id %>
  <% else %>
	<%= @stone.name %> 
  <% end %>
  </div>
</div>
<div class="row">
  <div id="show-tools" class="col-lg-4">
    <div class="row btn-toolbar tool-selector" role="toolbar">
      <div class="btn-group btn-group-sm">
        <%= link_to family_stone_path(@stone), class: "btn btn-secondary activate", id: "tree-conifer-button", remote: true do %>
          <%= bi_icon('tree-conifer') %>
        <% end %>
        <% if @stone.has_image? %>
          <%= link_to picture_stone_path(@stone), class: "btn btn-secondary", id: "picture-button", remote: true do %>
            <%= bi_icon('picture') %>
          <% end %>
        <% end %>
        <%= link_to map_stone_path(@stone), class: "btn btn-secondary", id: "globe-button", remote: true do %>
          <%= bi_icon('globe') %>
        <% end %>
      </div>
      <% if can? :update, @stone %>
      <div class="btn-group btn-group-sm">
        <%= link_to edit_stone_path(@stone), class: "btn btn-secondary", id: "pencil-button", remote: true do %>
          <%= bi_icon('pencil') %>
        <% end %>
        <%= link_to property_stone_path(@stone), class: "btn btn-secondary", id: "cog-button", remote: true do %>
          <%= bi_icon('cog') %>
        <% end %>
      </div>
      <% end %>
      <div class="btn-group btn-group-sm">
        <%= link_to download_label_stone_path(@stone), class: "btn btn-secondary", id: "tag-button" do %>
          <%= bi_icon('tag') %>
        <% end %>
        <%= link_to download_card_stone_path(@stone), class: "btn btn-secondary", id: "file-button" do %>
          <%= bi_icon('file') %>
        <% end %>
      </div>
    </div>
    <img>
    <div class="row tool-content">
    </div>
  </div>
  <div id="show-body" class="col-lg-8">
    <%= @stone.path %>
    <% if @current_user.advanced then %>       
            <% tab_info = [
                ["at-a-glance",nil],
                ["daughter",@stone.children],
                ["analysis",@stone.analyses,"analyses"],
                ["bib",@stone.bibs],
                ["file",@stone.attachment_files],
	        ["preparation",@stone.preparations]] %>
    <% else %>   		
            <% tab_info = [
                ["at-a-glance",nil],
                ["daughter",@stone.children],
                ["bib",@stone.bibs],
                ["file",@stone.attachment_files],
	        ["preparation",@stone.preparations]] %>	
	
    <% end %>   	
    <!-- Nav tabs -->
    <ul class="nav nav-tabs">
      <% tab_info.each do |key,array,title| %>
       <li class="<%= active_if_current(key) %>" ><a href="#<%= key %>" data-bs-toggle="tab"><%= (title.blank? ? key : title)  + data_count(array) %></a></li>
      <% end %>

    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
      <% tab_info.each do |key,array| %>
        <div class="tab-pane<%= active_if_current(key) %>" id="<%= key %>"><%= render partial: key.underscore %></div>
      <% end %>
    </div>
  </div>
</div>
