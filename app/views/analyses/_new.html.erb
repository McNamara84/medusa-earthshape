<%= form_for analysis, remote: true, format: :json, html: { class: "create" } do |f| %>
<tr>
  <th><%= check_box_tag nil, nil, false, class: "select-row-all" %></th>
  <th><%= f.text_field :name, class: "form-control input-sm", size: 15 %></th>
  <th><%= f.text_field :operator, class: "form-control input-sm", size: 15 %></th>  
  <th><%= f.select :device_id, Device.order(:name).pluck(:name, :id), { include_blank: true }, class: "form-control input-sm" %></th>
  <th><%= # f.text_field :stone_global_id, class: "form-control input-sm", size: 15
   %></th>
  <th></th>
  <%= f.fields_for :record_property_attributes do |r| %>
  <%= th_if_expand @current_user.username %>
  <th>
    <%= r.select :group_id ,@current_user.groups.order(:name).pluck(:name, :id), { include_blank: true }, class: "form-control input-sm" %>
    <%= r.hidden_field :user_id ,value: @current_user.id %>
    <%= r.hidden_field :guest_readable , value: "true" %>    
  </th>
  <% end %>
  <th>
    <%= f.button class: "btn btn-secondary btn-sm" do %>
    <%= bi_icon('save') %>
    <% end %>
  </th>
  <th></th>
</tr>
<% end %>

