<%= form_for bib, remote: true, format: :json, html: { class: "create" } do |f| %>
<tr>
  <th><%= check_box_tag nil, nil, false, class: "select-row-all" %></th>
  <th><%= f.text_field :name %></th>
  <th><%= f.text_field :doi %></th>
  <th><%= f.collection_select(:author_ids, Author.all.to_a, :id, :name, {}, multiple: true) %></th>
  <th><%= f.text_field :year %></th>
  <th><%= f.text_field :entry_type %></th>
  <%= f.fields_for :record_property_attributes do |r| %>
  <th><%= @current_user.username %><%= r.hidden_field :user_id ,value: @current_user.id %></th>
  <th><%= r.select :group_id ,Group.pluck(:name, :id),include_blank: true %></th>
  <% end %>
  <th>
    <%= f.button class: "btn btn-default" do %>
    <span class="glyphicon glyphicon-save"></span>
    <% end %>
  </th>
  <th></th>
</tr>
<% end %>

