<%= form_for Bib.new, url: bundle_update_bibs_path do |f| %>
<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th></th>
      <th>name</th>
      <th>doi</th>
      <th>author</th>
      <th>year</th>
      <th>type</th>
      <th>owner</th>
      <th>group</th>
      <th>published</th>
      <th>updated_at</th>
      <th>created_at</th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: :bib, collection: @bibs, locals: { checked: true } %>
  </tbody>
  <tfoot>
    <tr>
      <th><%= check_box_tag nil, nil, true, class: "select-row-all" %></th>
      <th></th>
      <th><%= f.text_field :doi %></th>
      <th></th>
      <th><%= f.text_field :year %></th>
      <th><%= f.text_field :entry_type %></th>
      <th><%= f.select :user_id ,User.pluck(:username, :id), include_blank: true %></th>
      <th><%= f.select :group_id ,Group.pluck(:name, :id), include_blank: true %></th>
      <th>
        <%= f.button class: "btn btn-default" do %>
          <span class="glyphicon glyphicon-save"></span>
        <% end %>
      </th>
      <th></th>
      <th></th>
    </tr>
  </tfoot>
</table>
<% end %>
