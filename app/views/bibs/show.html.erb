<div class="row">
  <div id="show-caption" class="col-lg-12">
    <%= @bib.name_with_id %>
  </div>
</div>
<div class="row">
  <div id="show-tools" class="col-lg-4">
    <div class="row btn-toolbar tool-selector" role="toolbar">
      <div class="btn-group btn-group-sm">
        <% if @bib.has_image? %>
          <%= link_to picture_bib_path(@bib), class: "btn btn-default", remote: true do %>
            <span class="glyphicon glyphicon-picture"></span>
          <% end %>
        <% end %>
      </div>
      <div class="btn-group btn-group-sm">
        <%= link_to edit_bib_path(@bib), class: "btn btn-default", remote: true do %>
          <span class="glyphicon glyphicon-pencil"></span>
        <% end %>
        <%= link_to property_bib_path(@bib), class: "btn btn-default", remote: true do %>
          <span class="glyphicon glyphicon-cog"></span>
        <% end %>
      </div>
      <div class="btn-group btn-group-sm">
        <%= link_to download_label_bib_path(@bib), class: "btn btn-default" do %>
          <span class="glyphicon glyphicon-tag"></span>
        <% end %>
      </div>
    </div>
    <img>
    <div class="row tool-content">
    </div>
  </div>
  <div id="show-body" class="col-lg-8">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs">
      <li><a href="#at-a-glance" data-toggle="tab">at a glance</a></li>
      <li><a href="#stone" data-toggle="tab">stone <%= data_count(@bib.stones) %></a></li>
      <li><a href="#box" data-toggle="tab">box <%= data_count(@bib.boxes) %></a></li>
      <li><a href="#place" data-toggle="tab">place <%= data_count(@bib.places) %></a></li>
      <li><a href="#analysis" data-toggle="tab">analysis <%= data_count(@bib.analyses) %></a></li>
      <li><a href="#attachment_file" data-toggle="tab">attachment_file <%= data_count(@bib.attachment_files) %></a></li>
    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
      <div class="tab-pane<%= if_active %>" id="at-a-glance"><%= render partial: "at_a_glance" %></div>
      <div class="tab-pane<%= if_active "stone" %>" id="stone"><%= render partial: "stone" %></div>
      <div class="tab-pane<%= if_active "box" %>" id="box"><%= render partial: "box" %></div>
      <div class="tab-pane<%= if_active "place" %>" id="place"><%= render partial: "place" %></div>
      <div class="tab-pane<%= if_active "analysis" %>" id="analysis"><%= render partial: "analysis" %></div>
      <div class="tab-pane<%= if_active "attachment_file" %>" id="attachment_file"><%= render partial: "attachment_file" %></div>
    </div>
  </div>
</div>
